@model IEnumerable<ProyectoInmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "InmPorProp";
}

<h2>Inmuebles del propietario</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdInm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProp)
            </th>
            <th>
                <label>Propietario</label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantAmbientes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponible)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdInm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProp)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Propietario.Nombre)  @Html.DisplayFor(modelItem => item.Propietario.Apellido)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantAmbientes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Costo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponible)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdInm }) |
                @if (User.IsInRole("Administrador"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdInm })
                }
            </td>
        </tr>
}
    </tbody>
</table>
