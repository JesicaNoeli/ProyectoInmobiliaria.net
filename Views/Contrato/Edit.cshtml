@model ProyectoInmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdContr" class="control-label"></label>
                <input asp-for="IdContr" class="form-control" readonly />
                <span asp-validation-for="IdContr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Inquilinos</label>
                <select class="form-control" name="IdInq">
                    @foreach (var item in (IList<Inquilino>)ViewBag.Inquilinos)
                    {
                         @:<option @(item.IdInq == Model.IdInq ? "selected" : "")  value="@item.IdInq">@(item.Nombre + " " + item.Apellido)</option>
                    }
                </select>
                <span asp-validation-for="IdInq" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdInm" class="control-label"></label>
                <input asp-for="IdInm" class="control-label" readonly />
                <span asp-validation-for="IdInm" class="text-danger"></span>
            </div>
    
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCierre" class="control-label"></label>
                <input asp-for="FechaCierre" class="form-control" />
                <span asp-validation-for="FechaCierre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="checkbox">
                <label>
                    <input asp-for="Vigente" /> @Html.DisplayNameFor(model => model.Vigente)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

